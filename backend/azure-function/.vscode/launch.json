{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Azure Function (.NET Isolated)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/backend/azure-function/bin/Debug/net8.0/azure-function.dll",
            "args": [],
            "cwd": "${workspaceFolder}/backend/azure-function/bin/Debug/net8.0",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "preLaunchTask": "func: host start"
        }
    ]
}